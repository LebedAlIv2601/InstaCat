<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaCat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="body14Regular">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="body14Medium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="body16Regular">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="body16Medium">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="body20Regular">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="body20Medium">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>